<div class="col-md-6 mx-auto">

    <div class="card rounded-0">
        <div class="card-header">
            <h3 class="text-center mb-0">LogIn</h3>
        </div>

        <div class="card-body text-center">

            <%= form_tag login_path, :id => "formLogin", :class => "form" do %>
                <div class="form-group">
                    <%= text_field_tag :email,"", :placeholder => "Email", :class => "form-control form-control-lg rounded-0 text-center" %>
                </div>

                <div class="form-group">
                    <%= password_field_tag :password, "", :placeholder => "Password", :class => "form-control form-control-lg rounded-0 text-center" %>
                </div>

                <% if @user.present? and @user.errors.present? and  @user.errors[:login].present? %>
                	<div class="error"><%= @user.errors[:login][0] %></div>
                <% end %>
                
                <%= submit_tag "Login", :class => "btn btn-info form-control btn-lg margin-bottom" %>
            <% end %>

        </div>
       
    </div>

</div>