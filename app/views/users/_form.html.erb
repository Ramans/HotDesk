<%= form_for @user, :id => "formLogin", :class => "form" do |f| %>

    <div class="form-group">
        <%= f.text_field :name, :placeholder => "Name", :class => "form-control form-control-lg rounded-0 text-center" %>

        <% if @user.errors.present? and @user.errors['name'].present? %>
            <div class="error"><%= @user.errors['name'][0] %></div>
        <% end %>
    </div>

    <div class="form-group">
        <%= f.text_field :email, :placeholder => "Email", :class => "form-control form-control-lg rounded-0 text-center" %>

        <% if @user.errors.present? and @user.errors['email'].present? %>
            <div class="error"><%= @user.errors['email'][0] %></div>
        <% end %>
    </div>

    <div class="form-group">
        <%= f.password_field :password, :placeholder => "Password", :class => "form-control form-control-lg rounded-0 text-center" %>

        <% if @user.errors.present? and @user.errors['password'].present? %>
            <div class="error"><%= @user.errors['password'][0] %></div>
        <% end %>
    </div>

    <div class="form-group">
        <%= f.password_field :password_confirmation, :placeholder => "Password Confirmation", :class => "form-control form-control-lg rounded-0 text-center" %>

        <% if @user.errors.present? and @user.errors['password_confirmation'].present? %>
            <div class="error"><%= @user.errors['password_confirmation'][0] %></div>
        <% end %>
    </div>

    <%= f.submit "Register", :class => "btn btn-info form-control btn-lg margin-bottom" %>
    
<% end %>